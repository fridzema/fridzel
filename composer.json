{
    "name": "fridzema/fridzel",
    "description": "Minimalistic photo CMS ðŸ“¸",
    "keywords": ["cms", "photo", "laravel"],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": ">=7.0.0",
        "appstract/laravel-opcache": "^1.1",
        "fridzema/cdn-prefixer": "^0.0.1",
        "htmlmin/htmlmin": "^5.0",
        "intervention/image": "^2.4",
        "laravel/framework": "5.5.*",
        "predis/predis": "^1.1",
        "renatomarinho/laravel-page-speed": "^1.8",
        "spatie/laravel-medialibrary": "^6.6",
        "spatie/laravel-responsecache": "^4.1"
    },
    "require-dev": {
        "filp/whoops": "~2.0",
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "~1.0",
        "phpunit/phpunit": "~6.0",
        "arubacao/php-cs-fixer-config": "^0.0.2",
        "laravel/dusk": "^1.0"
    },
    "autoload": {
        "classmap": [
            "database/seeds",
            "database/factories"
        ],
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover"
        ],
        "cs": "vendor/bin/php-cs-fixer fix ./ --config=vendor/arubacao/php-cs-fixer-config/laravel.php_cs -vv",
        "clear": [
            "php artisan cache:clear",
            "php artisan config:clear",
            "php artisan migrate:refresh --seed",
            "php artisan medialibrary:clear"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true
    }
}
